datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  telefone  String   @unique
  endereco  String
  senha     String
  pedidos   Pedido[]
  reservas  Reserva[]
}

model Produto {
  id          Int      @id @default(autoincrement())
  nome        String
  preco       Float
  descricao   String?
  qtd_estoque Int
  itens       ItemPedido[]
}

model Reserva {
  id        Int      @id @default(autoincrement())
  clienteId Int      @unique
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  data      DateTime
  hora      String
  pessoas   Int
  status    String   @default("Pendente")
}

model Pedido {
  id            Int           @id @default(autoincrement())
  clienteId     Int
  cliente       Cliente       @relation(fields: [clienteId], references: [id])
  itens         ItemPedido[]
  total         Float
  statusPagamento String      @default("Pendente")
  data          DateTime      @default(now())
}

model ItemPedido {
  id           Int      @id @default(autoincrement())
  pedidoId     Int
  pedido       Pedido   @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  produtoId    Int
  produto      Produto  @relation(fields: [produtoId], references: [id])
  quantidade   Int
  precoUnitario Float
  valor_total  Float
}

model Funcionario {
  id        Int      @id @default(autoincrement())
  nome      String
  telefone  String   @unique
  email     String   @unique
  senha     String
  cargo     String   @default("Desconhecido")
}